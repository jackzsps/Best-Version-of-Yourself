rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. 針對 users 集合的規則
    // {userId} 是一個變數，代表文件 ID
    match /users/{userId} {
      // 允許 讀取/寫入：如果 請求者已登入 (auth != null) 且 請求者的 UID 等於 文件的 ID
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // 2. 針對該使用者底下的所有子集合 (例如 entries)
      // {document=**} 代表遞迴匹配所有子文件
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // (選用) 如果您有其他公開資料集合，可以在這裡設定
    // match /publicData/{docId} {
    //   allow read: if true;
    // }
  }
}